{
  "compilerOptions": {
    "strict": true,
    //
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    //
    "skipLibCheck": true,
    "esModuleInterop": true,
    //
    "outDir": "dist",
    "declaration": true,
    //
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
